<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/pop_up_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Development Team"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/devCredTitle"/>
    <TextView
        android:id="@+id/zachBrester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zachary Brester"
        android:textSize="15sp"
        android:layout_below="@+id/devCredTitle"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/nickDarren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nick Darren"
        android:textSize="15sp"
        android:layout_below="@+id/zachBrester"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/chadLewis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chad Lewis"
        android:textSize="15sp"
        android:layout_below="@+id/nickDarren"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/jeremyOlsen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jeremy Olsen"
        android:textSize="15sp"
        android:layout_below="@id/chadLewis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/iconCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icons made by Freepik from www.flaticon.com is licensed by CC BY 3.0"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/jeremyOlsen"
        android:textAlignment="center"
        android:textSize="8sp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/exitInfoBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/iconCredit"
        android:src="@drawable/saveinfo"
        android:background="@drawable/sms_btn_click"
        android:layout_centerHorizontal="true"
        android:clickable="true"/>



</RelativeLayout>
