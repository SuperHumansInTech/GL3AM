<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_click_event"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <TextView
        android:id="@+id/destText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Address"
        android:layout_alignParentTop="true"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/typeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destText"
        android:text="Type of Alarm"
        android:layout_marginTop="5dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/activationDistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activation Distance"
        android:layout_below="@id/typeText"
        android:textSize="10sp"/>
    <ImageView
        android:id="@+id/expandImage"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_toLeftOf="@+id/alarmDelLL"
        android:src="@drawable/swipe_arrow"
        android:background="@drawable/btn_click_event"
        android:clickable="true"
        android:minWidth="100dp"
        android:tag="nP"/>

    <LinearLayout
        android:id="@+id/alarmDelLL"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        ></LinearLayout>

</RelativeLayout>