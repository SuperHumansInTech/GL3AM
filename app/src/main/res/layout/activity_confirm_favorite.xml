<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/pop_up_background"
    android:layout_alignParentBottom="true"
    android:id="@+id/confirmOrDeleteLayout">


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Use this service?"
            />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/confirmorCancelLayout"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/confirmAlarmButton"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/saveinfo"
            android:background="@drawable/sms_btn_click"
            android:clickable="true"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/cancel_action"
            android:src="@drawable/cancel"
            android:background="@drawable/sms_btn_click"
            android:clickable="true"/>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>